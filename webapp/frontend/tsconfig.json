{
  "compilerOptions": {
    "target": "ES2017",                            
    "lib": ["DOM", "ES2017"],                      
    "jsx": "react-jsx",                            
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "components", "src/pages"],
  "exclude": ["node_modules"]
}
